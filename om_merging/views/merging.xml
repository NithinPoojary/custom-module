<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="merge_account_move_view" model="ir.ui.view">
        <field name="name">Merge Invoices/Bills</field>
        <field name="model">merge.move</field>
        <field name="arch" type="xml">
            <form string="Merge Invoices/Bills">
                <span class="o_form_label">All selected invoices will be merged and posted. You won't be able to modify them afterwards.</span>
                <footer>
                    <button string="Merge" name="merge_move" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_merge_account_move" model="ir.actions.act_window">
        <field name="name">Merge Invoices/Bills</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">merge.move</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="merge_account_move_view"/>
        <field name="context">{}</field>
        <field name="target">new</field>
        <field name="help">All selected invoices will be merged and posted. You won't be able to modify them afterwards.</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
        <field name="binding_model_id" ref="account.model_account_move" />
        <field name="binding_view_types">list</field>
    </record>

</odoo>